</section>
<section class="recipe-top-new">
<div class="inn">           
  <h3>新着レシピ</h3>
    <div class="grid grid--uniform">
      {%- for article in blog.articles -%}
        {%- render 'recipe-top-grid', article: article, grid_item_width: 'medium-up--one-third', per_row: '3', image_size: section.settings.blog_image_size -%}
      {%- endfor -%}
    </div>
  

  
    {%- if paginate.pages > 1 -%}
      {%- render 'pagination', paginate: paginate -%}
    {%- endif -%}
</div>
</section>
<section class="recipe-top-foot">
