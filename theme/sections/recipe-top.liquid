{%- paginate blog.articles by 21 -%}
  
<div data-section-id="{{ section.id }}" data-section-type="blog">
  <div class="page-width page-content recipe-top recipe">

    {%- render 'breadcrumbs' -%}

    <header class="section-header{% if section.settings.blog_show_tag_filter and blog.tags.size > 0 %}{% unless settings.type_headers_align_text %} section-header--with-link{% endunless %}{% endif %}">

  <section class="masthead">
		<video class="masthead-video" playsinline autoplay muted loop poster="//cdn.shopify.com/s/files/1/0262/8252/4717/files/poster-recipe-top.jpg">
			<source src="//cdn.shopify.com/videos/c/o/v/4384ecbba0bb4d769a1cb1d9bd1072ea.mp4" type="video/mp4">
		</video>
		<div class="masthead-overlay"></div>
      <h1 class="section-header__title">
        {{ blog.title }}

        {%- if section.settings.blog_show_rss -%}
          <a href="{{ shop.url }}{{ blog.url }}.atom" class="rss-link">
            <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-rss" viewBox="0 0 20 20"><path fill="#444" d="M5.903 16.586a2.489 2.489 0 1 1-4.977 0 2.489 2.489 0 0 1 4.977 0zM12.956 19.075H9.43c0-4.688-3.817-8.505-8.505-8.505V7.044c6.638 0 12.031 5.393 12.031 12.031z"/><path fill="#444" d="M15.445 19.075c0-8.028-6.493-14.52-14.52-14.52V.925c10.019 0 18.15 8.131 18.15 18.15h-3.63z"/></svg>
            <span class="icon__fallback-text">RSS</span>
          </a>
        {%- endif -%}
      </h1>
  </section>
    </header>

<section class="recipe-top-tag">
<div class="inn">
<h3>人気のタグから探す</h3>
